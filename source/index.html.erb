    </form>
  </div>
</div>
<!-- Your features code -->
<div class="container text-center padded">
  <div class="row">
    <% data.products.each do |product, infos| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= image_tag infos.picture %>
        <h2><%= infos.info1 %></h2>
        <p><%= infos.info2 %></p>
      </div>
    <% end %>
  </div>
</div>
<!-- Your cards code -->
<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center">Your next week-end</h2>
    <div class="row">
      <% data.weekends.each do |city, infos| %>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <div class="card " style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= infos.picture%>);">
              <div class="card-category"><%= city.capitalize %></div>
              <div class="card-description">
                <h2><%= infos.title %></h2>
                <p><%= infos.description %></p>
              </div>
              <%= image_tag infos.avatar, class: "card-user avatar avatar-large" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Your newsletter code -->
<div class="text-center padded" id="newsletter">
  <h2>Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
